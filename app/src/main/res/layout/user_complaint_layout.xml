<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="50dp"
        android:background="@color/white">
        <EditText
            android:id="@+id/choose_oid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:layout_marginLeft="30dp"
            android:hint="请选择需要投诉的订单"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:background="@null"
            android:textSize="18dp"
            android:drawableRight="@drawable/share_right"
            android:layout_marginRight="20dp"/>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="20dp"
        android:background="@color/white"
        android:layout_weight="4"
        android:orientation="vertical">

        <TextView
            android:id="@+id/choose_complaint"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="0dip"
            android:layout_marginLeft="30dp"
            android:text="选择投诉原因"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="18dp"
            android:drawableRight="@drawable/share_right"
            android:layout_marginRight="20dp"
            android:layout_weight="1" />

        <EditText
            android:id="@+id/complaint_text_edit"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:gravity="top|left"
            android:layout_marginRight="20dp"
            android:paddingTop="10dp"
            android:hint="补充详细信息以便帮您更快处理"
            android:layout_marginTop="10dp"
            android:textSize="16dp"
            android:background="@color/transparent"
            android:layout_marginLeft="30dp"
            android:layout_weight="4" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="4">

        <Button
            android:id="@+id/complaint_sub_bt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:text="提交"
            android:layout_marginLeft="220dp"
            android:textColor="@color/white"
            android:background="@drawable/register_bt"/>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>

</LinearLayout>