<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/cp_detail_title"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="0dip"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1">

        <Button
            android:id="@+id/cp_back_bt"
            android:layout_width="55dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:background="@drawable/btn_return_black"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="投诉详情"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"/>

    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:orientation="vertical"
        android:layout_weight="10">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:orientation="vertical"
            android:background="@color/bg"
            android:layout_weight="1">
            
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:text="投诉成功"
                android:textColor="@color/white"
                android:gravity="center_vertical"
                android:layout_marginLeft="20dp"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/cp_detail_now_time"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_marginLeft="20dp"
                android:layout_weight="0.7"
                android:gravity="center_vertical"
                android:text=""
                android:textColor="@color/white"
                android:textSize="16dp" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:orientation="vertical">

            <TextView
                android:id="@+id/cp_detail_oid"
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:layout_weight="1"
                android:text="订单编号:"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:layout_marginLeft="20dp"/>
            
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="horizontal"
                android:layout_weight="2">

                <ImageView
                    android:id="@+id/cp_detail_image"
                    android:layout_width="0dip"
                    android:layout_marginLeft="20dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#80bebebe" />

                <TextView
                    android:id="@+id/cp_detail_describe_text"
                    android:layout_width="0dip"
                    android:layout_height="match_parent"
                    android:layout_weight="6"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                    android:text="物品名称:"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:gravity="left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dip"
                android:orientation="vertical"
                android:layout_weight="2.5">

                <TextView
                    android:id="@+id/cp_detail_text"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginLeft="20dp"
                    android:text="投诉原因:"
                    android:textSize="11dp"
                    android:gravity="center_vertical"
                    android:layout_marginTop="10dp"/>

                <TextView
                    android:id="@+id/cp_detail_time"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:textSize="11dp"
                    android:text="投诉时间:"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:id="@+id/cp_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"
                    android:layout_weight="1"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="10dp"
                    android:textSize="11dp"
                    android:gravity="center_vertical"
                    android:text="管理员回复:"
                    android:layout_marginLeft="20dp"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="4.5"></LinearLayout>


    </LinearLayout>


</LinearLayout>