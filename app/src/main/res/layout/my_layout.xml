<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:background="@color/myfragmentcolor"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="3"
        android:background="@color/myfragmentcolor">

        <TextView
            android:id="@+id/loginOut_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:text="注销登录"
            android:textColor="@color/white"
            android:textSize="16dp" />

        <com.zwxt.shareApp.view.CircleImageView
            android:id="@+id/circleImageView"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/t"
            android:layout_centerInParent="true"/>

        <TextView
            android:id="@+id/login_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/white" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="10dp"
        android:layout_weight="0.8"
        android:background="@color/white"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="0"
                android:gravity="center"
                android:layout_height="0dip"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:text="我的物品"
                android:gravity="center"
                android:layout_height="0dip"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#80bebebe"/>

        <LinearLayout
            android:id="@+id/coupon_lin"
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_text_selector"
            android:orientation="vertical">

            <TextView
                android:id="@+id/coupon_number"
                android:layout_width="match_parent"
                android:text="0"
                android:gravity="center"
                android:layout_height="0dip"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:text="优惠券"
                android:gravity="center"
                android:layout_height="0dip"
                android:layout_weight="1"/>

        </LinearLayout>

        <View
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="#80bebebe"/>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone"
            android:layout_marginRight="20dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:text="0"
                android:gravity="center"
                android:layout_height="0dip"
                android:layout_weight="1"/>

            <TextView
                android:layout_width="match_parent"
                android:text="我的积分"
                android:gravity="center"
                android:layout_height="0dip"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/my_storage_text"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:background="@drawable/my_text_selector"
        android:drawableRight="@drawable/share_right"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:text="我的储物" />

    <TextView
        android:id="@+id/my_address_text"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="1dp"
        android:text="我的地址簿"
        android:background="@drawable/my_text_selector"
        android:paddingLeft="30dp"
        android:drawableRight="@drawable/share_right"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/complaint_text"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="1dp"
        android:text="投诉"
        android:paddingLeft="30dp"
        android:drawableRight="@drawable/share_right"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/my_text_selector"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/my_help"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:visibility="gone"
        android:background="@drawable/my_text_selector"
        android:drawableRight="@drawable/share_right"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:paddingRight="20dp"
        android:text="帮助中心" />

    <TextView
        android:id="@+id/customer_service"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_marginTop="1dp"
        android:text="电话联系客服"
        android:paddingLeft="30dp"
        android:drawableRight="@drawable/share_right"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/my_text_selector"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/suggest_text"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:visibility="gone"
        android:layout_marginTop="1dp"
        android:text="反馈与建议"
        android:paddingLeft="30dp"
        android:drawableRight="@drawable/share_right"
        android:paddingRight="20dp"
        android:gravity="center_vertical"
        android:background="@drawable/my_text_selector"
        android:layout_weight="1"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="2.8"/>

</LinearLayout>