<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="#ffe6e6e6"
    android:layout_height="match_parent">

    <View
        android:id="@+id/complaint_title"
        android:layout_width="match_parent"
        android:background="@color/bg"
        android:layout_height="0dip" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        android:background="@color/bg">

        <Button
            android:id="@+id/complaint_back_bt"
            android:layout_width="25dp"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/fanhui" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="投诉"
            android:textColor="@android:color/white"
            android:textSize="18dp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="10"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:background="@android:color/white"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_complaint"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:text="投诉"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:paddingBottom="8dp"
                android:textColor="@android:color/black"
                android:drawableBottom="@drawable/red_tran"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/my_complaint"
                android:layout_width="fill_parent"
                android:layout_marginTop="10dp"
                android:layout_height="match_parent"
                android:text="我的投诉"
                android:paddingBottom="8dp"
                android:gravity="center_horizontal"
                android:textSize="20dp"
                android:textColor="@android:color/black"
                android:layout_weight="1"/>
        </LinearLayout>

        <android.support.v4.view.ViewPager
            android:id="@+id/complaints_view_page"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="8"></android.support.v4.view.ViewPager>
    </LinearLayout>
</LinearLayout>